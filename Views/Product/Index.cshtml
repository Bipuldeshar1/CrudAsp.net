@model List<CrudAsp.net.Models.Product>
@{
}

<h1>Product List</h1>
<a asp-action="Create" asp-controller="Product">add Product</a>
<table class="table">
    <div>
        <thead>
            <tr>
            <td>Id</td>
            <td>Title</td>
            <td>Description</td>
            <td>Price</td>
            <td>Image</td>
            <td>Created At</td>
            </tr>
        </thead>
        <tbody>
         
       @foreach(var i in Model){
          <tr>
              <td>@i.Id</td>
                <td>@i.Title</td>
                <td>@i.Description</td>
                <td>@i.Price</td>
                <td><img src="@i.Image"class="img-thumbnail" width="250" height="250"/></td>
                <td>@i.CreatedDate</td>
              
                <td>
                    <a asp-route-id="@i.Id" asp-action="Edit" asp-controller="Product">Edit</a>
                    <a asp-route-id="@i.Id" asp-action="Delete" asp-controller="Product">Delete</a>
                </td>
                
          </tr>
       }
            
       
        </tbody>
    </div>
</table>
